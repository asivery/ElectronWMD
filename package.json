{
  "name": "electronwmd",
  "version": "0.5.0-1.5.0",
  "description": "Electron version of WebMinidisc Pro",
  "main": "dist/main.js",
  "scripts": {
    "build": "./build-renderer.sh && ./run-fixes.sh && tsc",
    "start": "npm run build && NODE_ENV=development electron ./dist/main.js",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder -wl --x64 && electron-builder -w --ia32",
    "dist-mac": "./build-renderer.sh && ./run-fixes-macdist.sh && tsc && electron-builder -m --x64 && electron-builder -m --arm64"
  },
  "build": {
    "directories": {
      "output": "build",
      "buildResources": "res"
    },
    "artifactName": "${name}-${version}-${os}_${arch}.${ext}",
    "compression": "store",
    "asar": false,
    "win": {
      "icon": "./res/icon.ico"
    },
    "linux": {
      "icon": "./res/icon.png"
    },
    "files": [
      "node_modules",
      "dist",
      "renderer",
      "res"
    ],
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "npmRebuild": false
  },
  "author": "asivery",
  "private": true,
  "dependencies": {
    "async-mutex": "^0.3.2",
    "electron-context-menu": "^3.6.1",
    "electron-prompt": "^1.7.0",
    "electron-store": "^8.1.0",
    "himd-js": "^0.2.0-alpha.5",
    "jconv": "^0.1.5",
    "jsbi": "^3.2.5",
    "msgpackr": "^1.9.5",
    "netmd-exploits": "^0.5.4",
    "netmd-js": "^4.2.0",
    "networkwm-js": "^0.1.0",
    "netmd-tocmanip": "^0.1.5",
    "node-fetch": "^2.6.7",
    "nufatfs": "^0.1.3",
    "sudo-prompt": "^9.2.1",
    "typescript": "^4.3.5",
    "usb": "^2.13.0"
  },
  "devDependencies": {
    "@types/electron-prompt": "^1.6.5",
    "@types/node-fetch": "^2.6.2",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "prettier": "^2.7.1"
  }
}
