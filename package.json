{
  "name": "electronwmd",
  "version": "0.2.1-1.3.0",
  "description": "Electron version of WebMinidisc Pro",
  "main": "dist/main.js",
  "scripts": {
    "build": "./build-renderer.sh && tsc",
    "start": "npm run build && NODE_ENV=development electron ./dist/main.js",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder -wl --x64 && electron-builder -w --ia32",
    "dist-mac": "npm run build && electron-builder -m"
  },
  "build": {
    "directories": {
      "output": "build",
      "buildResources": "res"
    },
    "artifactName": "${name}-${version}-${os}_${arch}.${ext}",
    "compression": "store",
    "asar": "true",
    "asarUnpack": [
      "./node_modules/netmd-js/**/*",
      "./node_modules/crypto-js/**/*",
      "./node_modules/jconv/**/*",
      "./node_modules/jsbi/**/*"
    ],
    "win": {
      "icon": "./res/icon.ico"
    },
    "linux": {
      "icon": "./res/icon.png"
    },
    "files": [
      "node_modules",
      "dist",
      "renderer",
      "res"
    ]
  },
  "author": "asivery",
  "private": true,
  "dependencies": {
    "async-mutex": "^0.3.2",
    "electron-store": "^8.1.0",
    "jconv": "^0.1.5",
    "jsbi": "^3.2.5",
    "netmd-exploits": "^0.4.0",
    "netmd-js": "^4.1.1",
    "netmd-tocmanip": "^0.1.4",
    "node-fetch": "^2.6.7",
    "typescript": "^4.3.5",
    "usb": "^2.4.1"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/node-fetch": "^2.6.2",
    "electron": "^13.6.9",
    "electron-builder": "^22.11.7",
    "prettier": "^2.7.1"
  }
}
